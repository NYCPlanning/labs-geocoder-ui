<h2 class="ui header">
  Function {{@functionModel.function}}
  <div class="sub header">{{@functionModel.description}}</div>
</h2>

<p>Input: {{@functionModel.input}}</p>

<div class="ui form" action="#">
  {{#each @functionModel.inputs as |input|}}
    <div class="field">
      <div class="ui fluid labeled input">
        <div class="ui label">
          {{input.name}}
        </div>

        <Input @value={{get queryInputs input.alt_names.firstObject}}/>
      </div>
    </div>
  {{/each}}

  <button class="ui primary button" {{action this.queryGeosupport}}>
    Query
  </button>
</div>

Query Preview:
{{#each-in this.queryInputs as |key value|}}
  {{key}}: {{value}} <br/>
{{/each-in}}

<table class="ui compact table">
  <tbody>
    {{#each-in this.queryResults as |key value|}}
      <tr>
        <td>{{key}}</td>
        <td>{{value}}</td>
      </tr>
    {{/each-in}}
  </tbody>
</table>

{{yield}}
